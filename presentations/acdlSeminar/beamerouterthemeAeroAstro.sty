\defbeamertemplate*{footline}{full}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.4\paperwidth,ht=3.00ex,dp=1ex,center]{section in footer}%
    \vbox to2.75ex{\vfil\footnotesize\insertsectionhead}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.4\paperwidth,ht=3.00ex,dp=1ex,center]{subsection in footer}%
    \vbox to2.75ex{\vfil\footnotesize\insertsubsectionhead}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.2\paperwidth,ht=3.00ex,dp=1ex,center]{pagenumber in footer}%
    \vbox to2.75ex{\vfil\footnotesize\pagenumcmd\hspace*{2ex}}
  \end{beamercolorbox}}%
  \vskip0pt%
}

